  build-depends:       aeson >= 1.1 && < 1.2
                     , base >= 4.7 && < 5
                     , base64-bytestring >= 1.0 && < 1.1
                     , basic-prelude >= 0.6 && < 0.7
                     , bytestring >= 0.10 && < 0.11
                     , conduit-extra >= 1.1.16 && < 1.3
                     , containers >= 0.5 && < 0.6
                     , errors >= 2.2 && < 2.3
                     , exceptions >= 0.8.3 && < 0.9
                     , ghc >= 8.0 && < 8.1
                     , http-client >= 0.5 && < 0.6
                     , http-client-tls >=0.3.5.1 && < 0.4
                     , http-conduit >= 2.2 && < 2.3
                     , http-types >= 0.9 && < 0.10
                     , process-extras >= 0.7 && < 0.8
                     , regex-compat >= 0.95 && < 0.96
                     , regex-posix >= 0.95 && < 0.96
                     , soap >= 0.2.3.5 && < 0.3
                     , text >= 1.2 && < 1.3
                     , time >= 1.6 && < 1.7
                     , unordered-containers >= 0.2 && < 0.3
                     , vector >= 0.12 && < 0.13
                     , xml >= 1.3 && < 1.4
                     , xml-conduit >= 1.5.1 && < 1.6
                     , xml-conduit-writer >= 0.1.1.1 && < 0.2
  default-language:    Haskell2010

executable stamp
  hs-source-dirs:      stamp
  main-is:             main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , bytestring
                     , cfdis
                     , text
  default-language:    Haskell2010

executable cancel_cfdi
  hs-source-dirs:      cancel_cfdi
  main-is:             main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , bytestring
                     , cfdis
                     , text
  default-language:    Haskell2010

test-suite unit-tests
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  hs-source-dirs:     test/unit
  default-extensions: OverloadedStrings
  other-modules:      CFDISpec
                    , CFDI.CSDSpec
                    , CFDI.PAC.FelSpec
                    , CFDI.PAC.ITimbreSpec
                    , CFDI.V3_2Spec
  build-depends:      base
                    , cfdis
                    , directory
                    , extra
                    , hspec
                    , hspec-discover
                    , temporary
                    , text
                    , time
                    , xml
                    , yaml
  default-language:   Haskell2010

source-repository head
  type:     git
  location: https://github.com/yusent/cfdis
